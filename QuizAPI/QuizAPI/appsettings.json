{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DevConnection": "Server=.;Database=QuizDb;Trusted_Connection=True;TrustServerCertificate=True;MultipleActiveResultSets=True;"
  }
}

// Connection String explanation:

// MultipleActiveResultSets=True  for running multiple queries at the same time
// TrustServerCertificate=True    for using Microsoft Authentication 
// TrustedConnection=True         

// src: https://stackoverflow.com/a/1642512
// "When you use trusted connections, username and password are IGNORED, because SQL Server using windows authentication."
// "You can't use trusted connection with Sql Server authentication. They are mutually exclusive."
